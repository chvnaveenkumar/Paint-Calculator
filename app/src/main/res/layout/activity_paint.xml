<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s530742.chandaluri_program04.PaintActivity">

    <Button
        android:id="@+id/premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="164dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="55dp"
        android:text="Premium"
        android:onClick="premium"
        app:layout_constraintBottom_toTopOf="@+id/standard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="155dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="57dp"
        android:text="Standard"
        android:onClick="standard"
        app:layout_constraintBottom_toTopOf="@+id/economy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/premium" />

    <Button
        android:id="@+id/economy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="201dp"
        android:layout_marginEnd="161dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="54dp"
        android:text="Economy"
        android:onClick="economy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/standard" />
</android.support.constraint.ConstraintLayout>
